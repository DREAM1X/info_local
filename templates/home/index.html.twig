{% extends 'base.html.twig' %}

{% block title %}Accueil
{% endblock %}

{% block body %}
	<div class="container px-4 px-lg-5">
		<div class="row gx-4 gx-lg-5 justify-content-center">
			<div class="col-md-10 col-lg-8 col-xl-7">
				{% for article in articles %}
					<div class="cards">
						<a href="/article/{{article.id}}">
							{{article.title}}
							<br>
							{{article.excerpt}}
						</a>
					</div>
					<hr class="my-4"/>
				{% endfor %}
			</div>
		</div>
	</div>
{% endblock %}
